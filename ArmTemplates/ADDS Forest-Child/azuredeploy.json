{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
      "adminUsername": "lcladmin",
      "adminPassword": "lcladminP@ssw0rd",
      "createChildDomain": true,
      "createSecondDc": false,
      "DomainName": "contoso.com",
      "ChildDomainName": "australiaeast",
      "VMSize": "Standard_DS1_v2",
      "imageSKU": "2019-Datacenter",
      "diskType": "StandardSSD_LRS",
      "virtualNetworkName": "adVNET",
      "virtualNetworkAddressRange": "10.0.0.0/22",
      "externalDNSForwarder": "168.63.129.16",
      "adSubnetName": "adSubnet",
      "adSubnet": "10.0.0.0/24",
      "RootDC1Name": "rootdc1",
      "RootDC1IPAddress": "10.0.0.4",
      "RootDC2Name": "rootdc2",
      "RootDC2IPAddress": "10.0.0.5",
      "ChildDC3Name": "childdc3",
      "ChildDC3IPAddress": "10.0.0.6",
      "ChildDC4Name": "childdc4",
      "ChildDC4IPAddress": "10.0.0.7",
      "location": "[resourceGroup().location]",
      "_artifactsLocation": "https://github.com/gsjutla/AzureDevTestLab",
      "_artifactsLocationSasToken": "",
      "adNSGName": "[concat(variables('adSubnetName'),'NSG')]",
      "adAvailabilitySetNameRoot": "AvailSetRoot",
      "adAvailabilitySetNameChild": "AvailSetChild",
      "firstVMTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/CreateAndPrepnewVM.json',variables('_artifactsLocationSasToken'))]",
      "nextVMTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/CreateAndPrepnewVM.json',variables('_artifactsLocationSasToken'))]",
      "vnetTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/vnet.json',variables('_artifactsLocationSasToken'))]",
      "vnetwithDNSTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/vnet-with-dns-server.json',variables('_artifactsLocationSasToken'))]",
      "configureADNextDCTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/configureADNextDC.json',variables('_artifactsLocationSasToken'))]",
      "createForestTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/createForest.json',variables('_artifactsLocationSasToken'))]",
      "createChildDomainTemplateUri": "[concat(variables('_artifactsLocation'),'/nested/createChildDomain.json',variables('_artifactsLocationSasToken'))]",
      "nextDCConfigurationModulesURL": "[concat(variables('_artifactsLocation'),'/DSC/ConfigureADNextDC.ps1.zip',variables('_artifactsLocationSasToken'))]",
      "nextDCConfigurationFunction": "ConfigureADNextDC.ps1\\ConfigureADNextDC"
    },
    "resources": [
      {
        "name": "[variables('adAvailabilitySetNameRoot')]",
        "type": "Microsoft.Compute/availabilitySets",
        "apiVersion": "2018-06-01",
        "location": "[variables('location')]",
        "sku": {
          "name": "Aligned"
        },
        "properties": {
          "PlatformUpdateDomainCount": 3,
          "PlatformFaultDomainCount": 2
        }
      },
      {
        "name": "[variables('adAvailabilitySetNameChild')]",
        "type": "Microsoft.Compute/availabilitySets",
        "apiVersion": "2018-06-01",
        "condition": "[variables('createChildDomain')]",
        "location": "[variables('location')]",
        "sku": {
          "name": "Aligned"
        },
        "properties": {
          "PlatformUpdateDomainCount": 3,
          "PlatformFaultDomainCount": 2
        }
      },
      {
        "name": "CreateVNET",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('vnetTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "virtualNetworkAddressRange": {
              "value": "[variables('virtualNetworkAddressRange')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "subnetRange": {
              "value": "[variables('adSubnet')]"
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('adNSGName')]",
        "apiVersion": "2018-08-01",
        "location": "[variables('location')]",
        "properties": {
          "securityRules": [
            {
              "name": "Allow_Any_RDP",
              "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 200,
                "direction": "Inbound"
              }
            }
          ]
        },
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateVNET"
        ]
      },
      {
        "name": "CreateADVM1",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments','CreateVNET')]",
          "[resourceId('Microsoft.Compute/availabilitySets', variables('adAvailabilitySetNameRoot'))]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('firstVMTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "adAvailabilitySetName": {
              "value": "[variables('adAvailabilitySetNameRoot')]"
            },
            "vmName": {
              "value": "[variables('RootDC1Name')]"
            },
            "vmIpAddress": {
              "value": "[variables('RootDC1IPAddress')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "vmSize": {
              "value": "[variables('VMSize')]"
            },
            "diskType": {
              "value": "[variables('diskType')]"
            },
            "imageSKU": {
              "value": "[variables('imageSKU')]"
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      },
      {
        "name": "CreateForest",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateADVM1"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('createForestTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "vmName": {
              "value": "[variables('RootDC1Name')]"
            },
            "location": {
              "value": "[variables('location')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "domainName": {
              "value": "[variables('domainName')]"
            },
            "DNSForwarder": {
              "value": "[variables('externalDNSForwarder')]"
            },
            "_artifactsLocation": {
              "value": "[variables('_artifactsLocation')]"
            },
            "_artifactsLocationSasToken": {
              "value": "[variables('_artifactsLocationSasToken')]"
            }
          }
        }
      },
      {
        "name": "CreateADVM3",
        "type": "Microsoft.Resources/deployments",
        "condition": "[variables('createChildDomain')]",
        "apiVersion": "2018-08-01",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments','CreateVNET')]",
          "[resourceId('Microsoft.Compute/availabilitySets', variables('adAvailabilitySetNameChild'))]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('firstVMTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "adAvailabilitySetName": {
              "value": "[variables('adAvailabilitySetNameChild')]"
            },
            "vmName": {
              "value": "[variables('ChildDC3Name')]"
            },
            "vmIpAddress": {
              "value": "[variables('ChildDC3IPAddress')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "vmSize": {
              "value": "[variables('VMSize')]"
            },
            "diskType": {
              "value": "[variables('diskType')]"
            },
            "imageSKU": {
              "value": "[variables('imageSKU')]"
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      },
      {
        "name": "CreateChildDomain",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "condition": "[variables('createChildDomain')]",
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateADVM3",
          "Microsoft.Resources/deployments/CreateForest"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('createChildDomainTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "vmName": {
              "value": "[variables('ChildDC3Name')]"
            },
            "location": {
              "value": "[variables('location')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "parentDomainName": {
              "value": "[variables('domainName')]"
            },
            "childDomainName": {
              "value": "[variables('ChildDomainName')]"
            },
            "DNSForwarder": {
              "value": "[variables('RootDC1IPAddress')]"
            },
            "_artifactsLocation": {
              "value": "[variables('_artifactsLocation')]"
            },
            "_artifactsLocationSasToken": {
              "value": "[variables('_artifactsLocationSasToken')]"
            }
          }
        }
      },
      {
        "name": "CreateADVM2",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "condition": "[variables('createSecondDc')]",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments','CreateVNET')]",
          "[resourceId('Microsoft.Compute/availabilitySets', variables('adAvailabilitySetNameRoot'))]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('nextVMTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "adAvailabilitySetName": {
              "value": "[variables('adAvailabilitySetNameRoot')]"
            },
            "vmName": {
              "value": "[variables('RootDC2Name')]"
            },
            "vmIpAddress": {
              "value": "[variables('RootDC2IPAddress')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "vmSize": {
              "value": "[variables('VMSize')]"
            },
            "diskType": {
              "value": "[variables('diskType')]"
            },
            "imageSKU": {
              "value": "[variables('imageSKU')]"
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      },
      {
        "name": "ConfiguringRootDC2",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "condition": "[variables('createSecondDc')]",
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateADVM2",
          "Microsoft.Resources/deployments/CreateChildDomain"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('configureADNextDCTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "adNextDCVMName": {
              "value": "[variables('RootDC2Name')]"
            },
            "location": {
              "value": "[variables('location')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "domainName": {
              "value": "[variables('domainName')]"
            },
            "DNSServer": {
              "value": "[variables('RootDC1IPAddress')]"
            },
            "adNextDCConfigurationFunction": {
              "value": "[variables('nextDCConfigurationFunction')]"
            },
            "adNextDCConfigurationModulesURL": {
              "value": "[variables('nextDCConfigurationModulesURL')]"
            }
          }
        }
      },
      {
        "name": "CreateADVM4",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "condition": "[and(variables('createSecondDc'), variables('createChildDomain'))]",
        "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments','CreateVNET')]",
          "[resourceId('Microsoft.Compute/availabilitySets', variables('adAvailabilitySetNameChild'))]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('nextVMTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "adAvailabilitySetName": {
              "value": "[variables('adAvailabilitySetNameChild')]"
            },
            "vmName": {
              "value": "[variables('ChildDC4Name')]"
            },
            "vmIpAddress": {
              "value": "[variables('ChildDC4IPAddress')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "vmSize": {
              "value": "[variables('VMSize')]"
            },
            "diskType": {
              "value": "[variables('diskType')]"
            },
            "imageSKU": {
              "value": "[variables('imageSKU')]"
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      },
      {
        "name": "ConfiguringChildDC4",
        "type": "Microsoft.Resources/deployments",
        "condition": "[and(variables('createSecondDc'), variables('createChildDomain'))]",
        "apiVersion": "2018-08-01",
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateADVM4",
          "Microsoft.Resources/deployments/CreateChildDomain"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('configureADNextDCTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "adNextDCVMName": {
              "value": "[variables('ChildDC4Name')]"
            },
            "location": {
              "value": "[variables('location')]"
            },
            "adminUsername": {
              "value": "[variables('adminUsername')]"
            },
            "adminPassword": {
              "value": "[variables('adminPassword')]"
            },
            "domainName": {
              "value": "[concat(variables('childDomainName'), '.', variables('domainName'))]"
            },
            "DNSServer": {
              "value": "[variables('ChildDC3IPAddress')]"
            },
            "adNextDCConfigurationFunction": {
              "value": "[variables('nextDCConfigurationFunction')]"
            },
            "adNextDCConfigurationModulesURL": {
              "value": "[variables('nextDCConfigurationModulesURL')]"
            }
          }
        }
      },
      {
        "name": "UpdateVNet",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-08-01",
        "dependsOn": [
          "Microsoft.Resources/deployments/CreateChildDomain"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('vnetwithDNSTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "virtualNetworkName": {
              "value": "[variables('virtualNetworkName')]"
            },
            "virtualNetworkAddressRange": {
              "value": "[variables('virtualNetworkAddressRange')]"
            },
            "subnetName": {
              "value": "[variables('adSubnetName')]"
            },
            "subnetRange": {
              "value": "[variables('adSubnet')]"
            },
            "NSGName": {
              "value":  "[variables('adNSGName')]"
            },
            "DNSServerAddress": {
              "value": [
                "[variables('RootDC1IPAddress')]",
                "[variables('RootDC2IPAddress')]"
              ]
            },
            "location": {
              "value": "[variables('location')]"
            }
          }
        }
      }
    ]
  }